{# Advanced Interactive Card Component #}
{# A modern card component with animations, loading states, and interactive features #}

<div 
    class="group relative overflow-hidden rounded-lg border border-gray-200 bg-white shadow-sm transition-all duration-300 hover:shadow-lg hover:border-blue-300"
    data-controller="advanced-card"
    data-animation-duration="300"
>
    {# Background gradient animation #}
    <div class="absolute inset-0 -z-10 bg-gradient-to-br from-blue-50 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100"></div>

    {# Loading skeleton #}
    <div data-advanced-card-target="skeleton" class="hidden space-y-4 p-6">
        <div class="h-4 animate-pulse rounded bg-gray-200"></div>
        <div class="h-4 w-5/6 animate-pulse rounded bg-gray-200"></div>
        <div class="mt-4 space-y-2">
            <div class="h-3 animate-pulse rounded bg-gray-200"></div>
            <div class="h-3 w-4/5 animate-pulse rounded bg-gray-200"></div>
        </div>
    </div>

    {# Main content #}
    <div data-advanced-card-target="content" class="p-6 transition-all duration-300">
        {# Header section with icon #}
        <div class="mb-4 flex items-start justify-between">
            <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900 transition-colors duration-200 group-hover:text-blue-600">
                    {{ title | default('Card Title') }}
                </h3>
                {% if subtitle %}
                    <p class="mt-1 text-sm text-gray-500">{{ subtitle }}</p>
                {% endif %}
            </div>
            {% if icon %}
                <div class="flex-shrink-0 transform transition-transform duration-300 group-hover:scale-110 group-hover:rotate-6">
                    <div class="inline-flex h-10 w-10 items-center justify-center rounded-lg bg-blue-50 text-blue-600">
                        {{ icon | raw }}
                    </div>
                </div>
            {% endif %}
        </div>

        {# Description #}
        {% if description %}
            <p class="mb-4 text-sm text-gray-600 leading-relaxed">{{ description }}</p>
        {% endif %}

        {# Content slot #}
        {% if content is defined %}
            <div class="mb-4">{{ content | raw }}</div>
        {% endif %}

        {# Stats or tags section #}
        {% if stats %}
            <div class="mb-4 grid grid-cols-{{ stats | length }} gap-3">
                {% for stat in stats %}
                    <div class="rounded-lg bg-gray-50 p-3 transition-all duration-200 hover:bg-blue-50">
                        <div class="text-xs font-medium text-gray-600 uppercase tracking-wide">{{ stat.label }}</div>
                        <div class="mt-1 text-lg font-bold text-gray-900">{{ stat.value }}</div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        {# Action buttons #}
        {% if actions %}
            <div class="mt-6 flex gap-3">
                {% for action in actions %}
                    <button
                        type="button"
                        class="flex-1 rounded-lg px-4 py-2 text-sm font-medium transition-all duration-200 
                        {% if action.variant == 'primary' %}
                            bg-blue-600 text-white hover:bg-blue-700 active:scale-95
                        {% else %}
                            border border-gray-300 text-gray-700 hover:border-gray-400 hover:bg-gray-50 active:scale-95
                        {% endif %}"
                        data-advanced-card-target="actionButton"
                        data-action-id="{{ action.id | default(loop.index) }}"
                        aria-label="{{ action.label }}"
                    >
                        {{ action.label }}
                    </button>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    {# Animated border on hover #}
    <div class="absolute inset-0 -z-10 rounded-lg border border-blue-400 opacity-0 transition-opacity duration-300 group-hover:opacity-20" aria-hidden="true"></div>
</div>
