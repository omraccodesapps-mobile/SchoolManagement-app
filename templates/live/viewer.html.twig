{% extends 'base.html.twig' %}

{% block title %}Live Stream{% endblock %}

{% block content %}
<div class="container-fluid mt-3">
    <div class="row h-100">
        <!-- Main Video Stream -->
        <div class="col-md-9">
            <div class="card border-0 shadow-sm mb-4">
                <div id="videoContainer" class="position-relative" style="background-color: #000; padding-bottom: 56.25%; height: 0; overflow: hidden;">
                    <div id="videoPlayer" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"></div>
                </div>

                <!-- Video Controls -->
                <div class="card-body">
                    <h4 id="sessionTitle" class="mb-2"></h4>
                    <p id="sessionDescription" class="text-muted mb-3"></p>

                    <div class="row mb-3">
                        <div class="col-auto">
                            <span class="badge badge-lg" id="statusBadge">Loading...</span>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users"></i>
                            <span id="participantCount">0</span> Watching
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock"></i>
                            <span id="durationSpan">Started</span>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chalkboard-user"></i>
                            <span id="teacherName"></span>
                        </div>
                    </div>

                    <!-- Tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" href="#chat" data-bs-toggle="tab">
                                <i class="fas fa-comments"></i> Chat
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#notes" data-bs-toggle="tab">
                                <i class="fas fa-sticky-note"></i> Notes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#participants" data-bs-toggle="tab">
                                <i class="fas fa-users"></i> Participants
                            </a>
                        </li>
                    </ul>

                    <div class="tab-content mt-3">
                        <!-- Chat Tab -->
                        <div class="tab-pane fade show active" id="chat" role="tabpanel">
                            <div id="chatMessages" style="height: 400px; overflow-y: auto; border: 1px solid #dee2e6; border-radius: 4px; padding: 15px; margin-bottom: 10px; background-color: #f8f9fa;">
                                <!-- Messages load here -->
                            </div>
                            {% if is_granted('ROLE_USER') %}
                                <form id="chatForm" class="d-flex gap-2">
                                    <input type="text" id="chatMessage" class="form-control" placeholder="Type a message..." required>
                                    <button type="submit" class="btn btn-primary" id="sendChatBtn">
                                        <i class="fas fa-paper-plane"></i>
                                    </button>
                                </form>
                            {% else %}
                                <div class="alert alert-info mb-0">
                                    <a href="{{ path('app_login') }}">Sign in</a> to participate in chat
                                </div>
                            {% endif %}
                        </div>

                        <!-- Notes Tab -->
                        <div class="tab-pane fade" id="notes" role="tabpanel">
                            <div id="notesList" style="max-height: 400px; overflow-y: auto;">
                                <div class="text-center py-5">
                                    <p class="text-muted">No notes yet. Create one to get started!</p>
                                </div>
                            </div>
                            {% if is_granted('ROLE_USER') %}
                                <form id="noteForm" class="mt-3">
                                    <textarea id="noteContent" class="form-control" placeholder="Add a note..." rows="3" required></textarea>
                                    <button type="submit" class="btn btn-primary mt-2">
                                        <i class="fas fa-save"></i> Save Note
                                    </button>
                                </form>
                            {% endif %}
                        </div>

                        <!-- Participants Tab -->
                        <div class="tab-pane fade" id="participants" role="tabpanel">
                            <div id="participantsList" style="max-height: 400px; overflow-y: auto;">
                                <!-- Participants load here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar: Teacher Controls (for teachers only) -->
        {% if is_granted('ROLE_TEACHER') %}
        <div class="col-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-sliders-h"></i> Broadcast Controls
                    </h6>
                </div>
                <div class="card-body">
                    <div id="teacherControls">
                        <!-- Controls load here -->
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-line"></i> Session Stats
                    </h6>
                </div>
                <div class="card-body small">
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>Duration:</strong><br>
                            <span id="statsStatus">--</span>
                        </div>
                        <div class="col-6">
                            <strong>Participants:</strong><br>
                            <span id="statsParts">0</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <strong>Avg Time:</strong><br>
                            <span id="statsAvgTime">--</span>
                        </div>
                        <div class="col-6">
                            <strong>Chat Msgs:</strong><br>
                            <span id="statsChatMsgs">0</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>

<style>
    .badge-lg {
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
    }

    #chatMessages {
        display: flex;
        flex-direction: column;
    }

    .chat-message {
        padding: 10px;
        border-bottom: 1px solid #e9ecef;
        word-wrap: break-word;
    }

    .chat-message:last-child {
        border-bottom: none;
    }

    .chat-message .sender {
        font-weight: 600;
        color: #0d6efd;
        font-size: 0.9rem;
    }

    .chat-message .timestamp {
        font-size: 0.75rem;
        color: #6c757d;
        margin-left: 10px;
    }

    .chat-message.pinned {
        background-color: #fff3cd;
        border-left: 3px solid #ffc107;
    }

    .note-item {
        padding: 10px;
        border: 1px solid #dee2e6;
        border-radius: 4px;
        margin-bottom: 10px;
        background-color: #fff;
    }

    .participant-item {
        padding: 8px;
        border-bottom: 1px solid #dee2e6;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .participant-item .status-online {
        width: 8px;
        height: 8px;
        background-color: #28a745;
        border-radius: 50%;
        display: inline-block;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .chat-message {
        animation: fadeIn 0.3s ease-in-out;
    }
</style>

<script>
    const sessionId = new URL(window.location).searchParams.get('id') || window.location.pathname.split('/').pop();
    let rtcConnection = null;
    let chatRefreshInterval = null;
    let participantsRefreshInterval = null;
    let statsRefreshInterval = null;

    document.addEventListener('DOMContentLoaded', function() {
        loadSessionDetails();
        loadChatMessages();
        loadParticipants();

        // Refresh chat every 2 seconds
        chatRefreshInterval = setInterval(loadChatMessages, 2000);
        participantsRefreshInterval = setInterval(loadParticipants, 5000);
        
        {% if is_granted('ROLE_TEACHER') %}
        statsRefreshInterval = setInterval(loadSessionStats, 5000);
        loadTeacherControls();
        {% endif %}

        // Chat form submission
        document.getElementById('chatForm')?.addEventListener('submit', sendChatMessage);
        document.getElementById('noteForm')?.addEventListener('submit', saveNote);
    });

    function loadSessionDetails() {
        fetch(`/api/live-sessions/${sessionId}`)
            .then(r => r.json())
            .then(data => {
                document.getElementById('sessionTitle').textContent = data.title;
                document.getElementById('sessionDescription').textContent = data.description || '';
                document.getElementById('teacherName').textContent = data.teacher_name;
                
                const statusBadge = document.getElementById('statusBadge');
                if (data.status === 'ACTIVE') {
                    statusBadge.className = 'badge bg-success badge-lg';
                    statusBadge.innerHTML = '<i class="fas fa-circle"></i> LIVE';
                } else if (data.status === 'SCHEDULED') {
                    statusBadge.className = 'badge bg-info badge-lg';
                    statusBadge.textContent = 'SCHEDULED';
                } else {
                    statusBadge.className = 'badge bg-secondary badge-lg';
                    statusBadge.textContent = 'COMPLETED';
                }

                document.getElementById('participantCount').textContent = data.current_participants;
            });
    }

    function loadChatMessages() {
        fetch(`/api/live-sessions/${sessionId}/chat?limit=100`)
            .then(r => r.json())
            .then(data => {
                const container = document.getElementById('chatMessages');
                container.innerHTML = '';

                if (data.messages && data.messages.length > 0) {
                    data.messages.forEach(msg => {
                        const div = document.createElement('div');
                        div.className = 'chat-message' + (msg.is_pinned ? ' pinned' : '');
                        div.innerHTML = `
                            <span class="sender">${msg.user_name}</span>
                            <span class="timestamp">${new Date(msg.created_at).toLocaleTimeString()}</span>
                            ${msg.is_pinned ? '<span class="badge bg-warning" style="font-size: 0.7rem;">ðŸ“Œ</span>' : ''}
                            <div>${msg.message}</div>
                        `;
                        container.appendChild(div);
                    });
                    container.scrollTop = container.scrollHeight;
                }
            });
    }

    function loadParticipants() {
        fetch(`/api/live-sessions/${sessionId}/participants`)
            .then(r => r.json())
            .then(data => {
                const container = document.getElementById('participantsList');
                container.innerHTML = '';

                if (data.participants && data.participants.length > 0) {
                    data.participants.forEach(p => {
                        const div = document.createElement('div');
                        div.className = 'participant-item';
                        const isOnline = !p.left_at;
                        div.innerHTML = `
                            <span>
                                <span class="status-online" style="background-color: ${isOnline ? '#28a745' : '#dc3545'};"></span>
                                ${p.user_name}
                            </span>
                            <small>${p.duration_minutes}m</small>
                        `;
                        container.appendChild(div);
                    });
                } else {
                    container.innerHTML = '<div class="text-center py-5"><p class="text-muted">No participants yet</p></div>';
                }
            });
    }

    function sendChatMessage(e) {
        e.preventDefault();
        const message = document.getElementById('chatMessage').value.trim();

        if (!message) return;

        fetch(`/api/live-sessions/${sessionId}/chat`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ message })
        })
        .then(r => r.json())
        .then(data => {
            if (data.id) {
                document.getElementById('chatMessage').value = '';
                loadChatMessages();
            }
        });
    }

    function saveNote(e) {
        e.preventDefault();
        const content = document.getElementById('noteContent').value.trim();

        if (!content) return;

        fetch(`/api/video-details/${sessionId}/notes`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ note: content })
        })
        .then(r => r.json())
        .then(data => {
            if (data.id) {
                document.getElementById('noteContent').value = '';
                alert('Note saved!');
            }
        });
    }

    {% if is_granted('ROLE_TEACHER') %}
    function loadTeacherControls() {
        fetch(`/api/live-sessions/${sessionId}`)
            .then(r => r.json())
            .then(data => {
                const controlsDiv = document.getElementById('teacherControls');
                
                if (data.status === 'SCHEDULED') {
                    controlsDiv.innerHTML = `
                        <button class="btn btn-success w-100 mb-2" onclick="startBroadcast()">
                            <i class="fas fa-play"></i> Start Broadcast
                        </button>
                        <button class="btn btn-outline-danger w-100" onclick="cancelSession()">
                            <i class="fas fa-times"></i> Cancel
                        </button>
                    `;
                } else if (data.status === 'ACTIVE') {
                    controlsDiv.innerHTML = `
                        <button class="btn btn-danger w-100 mb-2" onclick="endBroadcast()">
                            <i class="fas fa-stop"></i> End Broadcast
                        </button>
                        <button class="btn btn-outline-secondary w-100 mb-2" onclick="toggleChat()">
                            <i class="fas fa-comments"></i> Toggle Chat
                        </button>
                        <div class="alert alert-info small mt-3 mb-0">
                            Stream Key: <code>${data.stream_key}</code>
                        </div>
                    `;
                } else {
                    controlsDiv.innerHTML = '<div class="alert alert-secondary small mb-0">Session has ended</div>';
                }
            });
    }

    function startBroadcast() {
        fetch(`/api/live-sessions/${sessionId}/start`, { method: 'POST' })
            .then(r => r.json())
            .then(data => {
                if (data.message) {
                    alert('Broadcast started!');
                    loadSessionDetails();
                    loadTeacherControls();
                }
            });
    }

    function endBroadcast() {
        if (confirm('End this broadcast?')) {
            fetch(`/api/live-sessions/${sessionId}/end`, { method: 'POST' })
                .then(r => r.json())
                .then(data => {
                    if (data.message) {
                        alert('Broadcast ended!');
                        location.reload();
                    }
                });
        }
    }

    function cancelSession() {
        if (confirm('Cancel this session?')) {
            fetch(`/api/live-sessions/${sessionId}`, { method: 'DELETE' })
                .then(r => r.json())
                .then(data => {
                    if (data.message) {
                        window.location.href = '/live/schedule';
                    }
                });
        }
    }

    function loadSessionStats() {
        fetch(`/api/live-sessions/${sessionId}`)
            .then(r => r.json())
            .then(data => {
                const uptime = data.started_at 
                    ? Math.floor((Date.now() - new Date(data.started_at)) / 60000)
                    : 0;
                
                document.getElementById('statsStatus').textContent = uptime + ' min';
                document.getElementById('statsParts').textContent = data.current_participants;
            });
    }
    {% endif %}

    // Cleanup on page leave
    window.addEventListener('beforeunload', function() {
        clearInterval(chatRefreshInterval);
        clearInterval(participantsRefreshInterval);
        clearInterval(statsRefreshInterval);

        // Leave session
        fetch(`/api/live-sessions/${sessionId}/leave`, { method: 'POST' }).catch(() => {});
    });
</script>
{% endblock %}
