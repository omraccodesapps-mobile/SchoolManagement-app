{% extends 'base.html.twig' %}

{% block title %}Live Class Schedule{% endblock %}

{% block content %}
<div class="container-fluid mt-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-0">
                <i class="fas fa-video"></i> Live Class Schedule
            </h1>
        </div>
        <div class="col-md-4 text-end">
            {% if is_granted('ROLE_TEACHER') %}
                <button class="btn btn-primary" id="newSessionBtn">
                    <i class="fas fa-plus"></i> Schedule Session
                </button>
            {% endif %}
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-4" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" href="#upcoming" data-bs-toggle="tab">
                <i class="fas fa-calendar"></i> Upcoming
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#active" data-bs-toggle="tab">
                <i class="fas fa-broadcast-tower"></i> Live Now
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#completed" data-bs-toggle="tab">
                <i class="fas fa-check-circle"></i> Completed
            </a>
        </li>
    </ul>

    <div class="tab-content">
        <!-- Upcoming Sessions -->
        <div class="tab-pane fade show active" id="upcoming" role="tabpanel">
            <div id="upcomingSessions" class="sessions-container">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Sessions -->
        <div class="tab-pane fade" id="active" role="tabpanel">
            <div id="activeSessions" class="sessions-container">
                <div class="text-center py-5">
                    <p class="text-muted">No active sessions</p>
                </div>
            </div>
        </div>

        <!-- Completed Sessions -->
        <div class="tab-pane fade" id="completed" role="tabpanel">
            <div id="completedSessions" class="sessions-container">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- New Session Modal -->
<div class="modal fade" id="newSessionModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Schedule New Live Session</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="newSessionForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="courseSelect" class="form-label">Course *</label>
                        <select id="courseSelect" class="form-select" required>
                            <option selected disabled>Select a course...</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="sessionTitle" class="form-label">Title *</label>
                        <input type="text" class="form-control" id="sessionTitle" required placeholder="e.g., Chapter 5 Discussion">
                    </div>
                    <div class="mb-3">
                        <label for="sessionDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="sessionDescription" rows="3" placeholder="Optional description..."></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label for="sessionDate" class="form-label">Date *</label>
                            <input type="date" class="form-control" id="sessionDate" required>
                        </div>
                        <div class="col-md-6">
                            <label for="sessionTime" class="form-label">Time *</label>
                            <input type="time" class="form-control" id="sessionTime" required>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label for="maxParticipants" class="form-label">Max Participants</label>
                            <input type="number" class="form-control" id="maxParticipants" value="100" min="1" max="1000">
                        </div>
                        <div class="col-md-6">
                            <div class="form-check mt-4">
                                <input type="checkbox" class="form-check-input" id="chatEnabled" checked>
                                <label class="form-check-label" for="chatEnabled">
                                    Enable Chat
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Schedule Session</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .session-card {
        border-left: 4px solid #0d6efd;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .session-card:hover {
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transform: translateY(-2px);
    }

    .session-card.active {
        border-left-color: #198754;
        background-color: #f0fdf4;
    }

    .session-card.completed {
        border-left-color: #6c757d;
        background-color: #f8f9fa;
    }

    .badge-live {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.7; }
    }

    .time-badge {
        font-size: 0.75rem;
        font-weight: 600;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Handle new session button
        const newSessionBtn = document.getElementById('newSessionBtn');
        if (newSessionBtn) {
            newSessionBtn.addEventListener('click', function() {
                loadCourses();
                new bootstrap.Modal(document.getElementById('newSessionModal')).show();
            });
        }

        // Load sessions
        loadUpcomingSessions();
        loadActiveSessions();
        loadCompletedSessions();

        // Refresh active sessions every 30 seconds
        setInterval(loadActiveSessions, 30000);
    });

    function loadUpcomingSessions() {
        fetch('/api/live-sessions?status=SCHEDULED', {
            headers: {
                'Accept': 'application/json',
                'Authorization': 'Bearer ' + document.querySelector('meta[name="csrf-token"]')?.content
            }
        })
        .then(r => r.json())
        .then(data => {
            const container = document.getElementById('upcomingSessions');
            container.innerHTML = '';

            if (data.sessions && data.sessions.length > 0) {
                data.sessions.forEach(session => {
                    container.innerHTML += `
                        <div class="card session-card mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-9">
                                        <h5 class="card-title">${session.title}</h5>
                                        <p class="card-text text-muted">${session.description || ''}</p>
                                        <small>
                                            <strong>${session.course_name}</strong> • 
                                            <i class="fas fa-user"></i> ${session.teacher_name}
                                        </small>
                                    </div>
                                    <div class="col-md-3 text-end">
                                        <div class="time-badge badge bg-info mb-2">
                                            <i class="fas fa-clock"></i> ${new Date(session.scheduled_at).toLocaleString()}
                                        </div>
                                        <br>
                                        <button class="btn btn-sm btn-outline-primary" onclick="joinSession('${session.id}')">
                                            Join Session
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                });
            } else {
                container.innerHTML = '<div class="text-center py-5"><p class="text-muted">No upcoming sessions</p></div>';
            }
        })
        .catch(err => console.error('Error loading sessions:', err));
    }

    function loadActiveSessions() {
        fetch('/api/live-sessions?status=ACTIVE', {
            headers: { 'Accept': 'application/json' }
        })
        .then(r => r.json())
        .then(data => {
            const container = document.getElementById('activeSessions');
            container.innerHTML = '';

            if (data.sessions && data.sessions.length > 0) {
                data.sessions.forEach(session => {
                    container.innerHTML += `
                        <div class="card session-card active mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-9">
                                        <div class="mb-2">
                                            <span class="badge badge-live">
                                                <i class="fas fa-circle" style="color: #ff0000;"></i> LIVE NOW
                                            </span>
                                        </div>
                                        <h5 class="card-title">${session.title}</h5>
                                        <p class="card-text text-muted">${session.description || ''}</p>
                                        <small>
                                            <strong>${session.course_name}</strong> • 
                                            <i class="fas fa-users"></i> ${session.current_participants}/${session.max_participants} participants
                                        </small>
                                    </div>
                                    <div class="col-md-3 text-end">
                                        <a href="/live/${session.id}" class="btn btn-primary btn-sm">
                                            <i class="fas fa-play-circle"></i> Watch Now
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                });
            } else {
                container.innerHTML = '<div class="text-center py-5"><p class="text-muted">No active sessions</p></div>';
            }
        })
        .catch(err => console.error('Error loading active sessions:', err));
    }

    function loadCompletedSessions() {
        fetch('/api/live-sessions?status=COMPLETED', {
            headers: { 'Accept': 'application/json' }
        })
        .then(r => r.json())
        .then(data => {
            const container = document.getElementById('completedSessions');
            container.innerHTML = '';

            if (data.sessions && data.sessions.length > 0) {
                data.sessions.forEach(session => {
                    container.innerHTML += `
                        <div class="card session-card completed mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-9">
                                        <h5 class="card-title">${session.title}</h5>
                                        <p class="card-text text-muted">${session.description || ''}</p>
                                        <small>
                                            <strong>${session.course_name}</strong> • 
                                            Ended: ${new Date(session.ended_at).toLocaleString()}
                                        </small>
                                    </div>
                                    <div class="col-md-3 text-end">
                                        ${session.recording_url ? `
                                            <a href="${session.recording_url}" class="btn btn-sm btn-outline-secondary" target="_blank">
                                                <i class="fas fa-download"></i> Recording
                                            </a>
                                        ` : ''}
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                });
            } else {
                container.innerHTML = '<div class="text-center py-5"><p class="text-muted">No completed sessions</p></div>';
            }
        })
        .catch(err => console.error('Error loading completed sessions:', err));
    }

    function loadCourses() {
        fetch('/api/courses', {
            headers: { 'Accept': 'application/json' }
        })
        .then(r => r.json())
        .then(data => {
            const select = document.getElementById('courseSelect');
            select.innerHTML = '<option selected disabled>Select a course...</option>';

            if (data.courses) {
                data.courses.forEach(course => {
                    const option = document.createElement('option');
                    option.value = course.id;
                    option.textContent = course.title;
                    select.appendChild(option);
                });
            }
        });
    }

    function joinSession(sessionId) {
        fetch(`/api/live-sessions/${sessionId}/join`, {
            method: 'POST',
            headers: { 'Accept': 'application/json' }
        })
        .then(r => r.json())
        .then(data => {
            if (data.message) {
                window.location.href = `/live/${sessionId}`;
            }
        });
    }

    // Handle new session form
    document.getElementById('newSessionForm')?.addEventListener('submit', function(e) {
        e.preventDefault();

        const data = {
            course_id: document.getElementById('courseSelect').value,
            title: document.getElementById('sessionTitle').value,
            description: document.getElementById('sessionDescription').value,
            scheduled_at: `${document.getElementById('sessionDate').value}T${document.getElementById('sessionTime').value}`,
            max_participants: parseInt(document.getElementById('maxParticipants').value),
            chat_enabled: document.getElementById('chatEnabled').checked
        };

        fetch('/api/live-sessions', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify(data)
        })
        .then(r => r.json())
        .then(data => {
            if (data.id) {
                alert('Session scheduled successfully!');
                bootstrap.Modal.getInstance(document.getElementById('newSessionModal')).hide();
                this.reset();
                loadUpcomingSessions();
            } else {
                alert('Error: ' + (data.error || 'Failed to create session'));
            }
        });
    });
</script>
{% endblock %}
