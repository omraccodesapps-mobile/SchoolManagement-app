<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}School Management{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    {# Advanced components styles (available via Asset Mapper) #}
    <link rel="stylesheet" href="{{ asset('styles/advanced_components.css') }}">
    {% block stylesheets %}{% endblock %}
  </head>
  <body>
    {% include 'components/_navbar.html.twig' %}
    <main class="container mt-4">
      {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }}">{{ messages|first }}</div>
      {% endfor %}
      {% block body %}{% endblock %}
    </main>
    {# Toast container included globally so toasts are available on all pages #}
    {% include 'components/advanced_toast.html.twig' %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    {% block javascripts %}
        {{ importmap() }}
    {% endblock %}
  </body>
</html>
