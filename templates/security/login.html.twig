{% extends 'base.html.twig' %}

{% block title %}Login - Welcome Back{% endblock %}

{% block body %}
<div class="advanced-login-container">
  <div class="advanced-login-wrapper" data-controller="advanced-form">
    <!-- Left Form Section -->
    <div class="advanced-login-form-section">
      <div class="form-header">
        <h1 class="form-title">Welcome Back</h1>
        <p class="form-subtitle">Access your learning dashboard</p>
      </div>

      <form method="post" action="{{ path('app_login') }}" class="advanced-login-form" data-advanced-form-target="form" novalidate>
        
        <!-- Email Field -->
        <div class="advanced-form-group" data-advanced-form-target="field">
          <label for="username" class="advanced-form-label">Email Address</label>
          <div class="advanced-input-wrapper">
            <input type="email" 
                   class="advanced-form-input" 
                   id="username" 
                   name="_username" 
                   placeholder="Enter your email"
                   required
                   autofocus
                   value="{{ last_username ?? '' }}">
            <span class="input-icon">‚úâ</span>
            <div class="input-indicator"></div>
          </div>
          {% if error %}
            <span class="advanced-form-error">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
          {% endif %}
        </div>

        <!-- Password Field -->
        <div class="advanced-form-group" data-advanced-form-target="field">
          <div class="label-row">
            <label for="password" class="advanced-form-label">Password</label>
            <a href="#" class="forgot-password-link">Forgot Password?</a>
          </div>
          <div class="advanced-input-wrapper">
            <input type="password" 
                   class="advanced-form-input" 
                   id="password" 
                   name="_password" 
                   placeholder="Enter your password"
                   required>
            <span class="input-icon toggle-password">üëÅ</span>
            <div class="input-indicator"></div>
          </div>
        </div>

        <!-- Remember Me -->
        <div class="advanced-checkbox-group">
          <label class="advanced-checkbox">
            <input type="checkbox" name="_remember_me">
            <span class="checkbox-custom"></span>
            <span class="checkbox-label">Remember me</span>
          </label>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="advanced-login-btn" data-advanced-form-target="submitBtn">
          <span class="btn-text">Sign In</span>
          <span class="btn-icon">‚Üí</span>
        </button>

        <!-- Signup Link -->
        <div class="form-footer">
          <p>Don't have an account? <a href="{{ path('app_register') }}" class="signup-link">Sign up here</a></p>
        </div>
      </form>

      <!-- Social Login (Optional) -->
      <div class="social-divider">
        <span>or continue with</span>
      </div>
      <div class="social-buttons">
        <button class="social-btn google-btn">
          <span class="social-icon">G</span>
        </button>
        <button class="social-btn github-btn">
          <span class="social-icon">‚öô</span>
        </button>
      </div>
    </div>

    <!-- Right Decorative Section -->
    <div class="advanced-login-decoration">
      <div class="decoration-blur-1"></div>
      <div class="decoration-blur-2"></div>
      <div class="decoration-content">
        <div class="decoration-card">
          <div class="card-icon">üìö</div>
          <h3>Start Learning Today</h3>
          <p>Access thousands of courses and connect with instructors worldwide</p>
        </div>
        <div class="decoration-card">
          <div class="card-icon">‚ö°</div>
          <h3>Real-Time Progress</h3>
          <p>Track your learning journey with detailed analytics and insights</p>
        </div>
        <div class="decoration-card">
          <div class="card-icon">ü§ù</div>
          <h3>Community Support</h3>
          <p>Collaborate with peers and instructors in a supportive environment</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.advanced-login-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20px;
  position: relative;
  overflow: hidden;
}

.advanced-login-wrapper {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40px;
  max-width: 1100px;
  width: 100%;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10px);
  animation: slideInUp 0.6s ease-out;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.advanced-login-form-section {
  padding: 60px 40px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  animation: slideInLeft 0.8s ease-out;
}

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.form-header {
  text-align: center;
  margin-bottom: 40px;
}

.form-title {
  font-size: 32px;
  font-weight: 700;
  color: #333;
  margin-bottom: 8px;
}

.form-subtitle {
  color: #999;
  font-size: 15px;
}

.advanced-login-form {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.advanced-form-group {
  animation: fadeInUp 0.6s ease-out both;
}

.advanced-form-group:nth-child(1) { animation-delay: 0.1s; }
.advanced-form-group:nth-child(2) { animation-delay: 0.2s; }

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(15px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.label-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.advanced-form-label {
  font-size: 13px;
  font-weight: 600;
  color: #333;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.forgot-password-link {
  font-size: 12px;
  color: #667eea;
  text-decoration: none;
  font-weight: 600;
  transition: all 0.3s ease;
}

.forgot-password-link:hover {
  color: #764ba2;
  text-decoration: underline;
}

.advanced-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.advanced-form-input {
  width: 100%;
  padding: 12px 40px 12px 16px;
  border: 2px solid #e0e0e0;
  border-radius: 10px;
  font-size: 14px;
  transition: all 0.3s ease;
  background: #fafafa;
}

.advanced-form-input:focus {
  outline: none;
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
  transform: translateY(-2px);
}

.advanced-form-input::placeholder {
  color: #ccc;
}

.input-icon {
  position: absolute;
  right: 12px;
  color: #999;
  font-size: 18px;
  cursor: pointer;
  transition: all 0.3s ease;
  user-select: none;
}

.input-icon.toggle-password:hover {
  color: #667eea;
  transform: scale(1.1);
}

.input-indicator {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 2px;
  background: linear-gradient(90deg, #667eea, #764ba2);
  width: 0;
  transition: width 0.3s ease;
}

.advanced-form-input:focus ~ .input-indicator {
  width: 100%;
}

.advanced-checkbox-group {
  display: flex;
  align-items: center;
  animation: fadeInUp 0.6s ease-out 0.3s both;
}

.advanced-checkbox {
  display: flex;
  align-items: center;
  gap: 8px;
  cursor: pointer;
  user-select: none;
}

.advanced-checkbox input[type="checkbox"] {
  display: none;
}

.checkbox-custom {
  width: 18px;
  height: 18px;
  border: 2px solid #e0e0e0;
  border-radius: 4px;
  transition: all 0.3s ease;
  position: relative;
  background: white;
}

.advanced-checkbox input[type="checkbox"]:checked ~ .checkbox-custom {
  border-color: #667eea;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.advanced-checkbox input[type="checkbox"]:checked ~ .checkbox-custom::after {
  content: '‚úì';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: 12px;
  font-weight: bold;
}

.checkbox-label {
  font-size: 13px;
  color: #666;
}

.advanced-login-btn {
  padding: 14px 24px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 10px;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  margin-top: 10px;
  position: relative;
  overflow: hidden;
  animation: fadeInUp 0.6s ease-out 0.4s both;
}

.advanced-login-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.advanced-login-btn:hover::before {
  width: 300px;
  height: 300px;
}

.advanced-login-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
}

.advanced-login-btn:active {
  transform: translateY(0);
}

.btn-text {
  position: relative;
  z-index: 1;
}

.btn-icon {
  position: relative;
  z-index: 1;
  font-size: 18px;
  transition: transform 0.3s ease;
}

.advanced-login-btn:hover .btn-icon {
  transform: translateX(4px);
}

.form-footer {
  text-align: center;
  margin-top: 20px;
  font-size: 14px;
  color: #666;
}

.signup-link {
  color: #667eea;
  text-decoration: none;
  font-weight: 600;
  transition: all 0.3s ease;
}

.signup-link:hover {
  color: #764ba2;
  text-decoration: underline;
}

.social-divider {
  text-align: center;
  margin: 30px 0 20px;
  position: relative;
}

.social-divider::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 1px;
  background: #e0e0e0;
}

.social-divider span {
  position: relative;
  background: white;
  padding: 0 10px;
  color: #999;
  font-size: 12px;
  z-index: 1;
}

.social-buttons {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
  animation: fadeInUp 0.6s ease-out 0.5s both;
}

.social-btn {
  padding: 12px;
  border: 2px solid #e0e0e0;
  background: white;
  border-radius: 10px;
  cursor: pointer;
  font-size: 18px;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.social-btn:hover {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.05);
  transform: translateY(-2px);
}

.advanced-login-decoration {
  position: relative;
  padding: 60px 40px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
  animation: slideInRight 0.8s ease-out;
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.decoration-blur-1, .decoration-blur-2 {
  position: absolute;
  border-radius: 50%;
  opacity: 0.1;
  animation: float 6s ease-in-out infinite;
}

.decoration-blur-1 {
  width: 300px;
  height: 300px;
  background: white;
  top: -100px;
  right: -100px;
}

.decoration-blur-2 {
  width: 200px;
  height: 200px;
  background: white;
  bottom: -50px;
  left: -50px;
  animation-delay: 2s;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(20px); }
}

.decoration-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.decoration-card {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 15px;
  padding: 24px;
  animation: scaleIn 0.6s ease-out both;
}

.decoration-card:nth-child(1) { animation-delay: 0.1s; }
.decoration-card:nth-child(2) { animation-delay: 0.2s; }
.decoration-card:nth-child(3) { animation-delay: 0.3s; }

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.card-icon {
  font-size: 40px;
  margin-bottom: 12px;
}

.decoration-card h3 {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 8px;
}

.decoration-card p {
  font-size: 13px;
  opacity: 0.9;
  line-height: 1.5;
}

/* Responsive Design */
@media (max-width: 768px) {
  .advanced-login-wrapper {
    grid-template-columns: 1fr;
    gap: 0;
  }

  .advanced-login-form-section {
    padding: 40px 20px;
  }

  .advanced-login-decoration {
    padding: 40px 20px;
    min-height: 300px;
  }

  .form-title {
    font-size: 26px;
  }

  .decoration-blur-1, .decoration-blur-2 {
    opacity: 0.05;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Toggle password visibility
  const togglePassword = document.querySelector('.toggle-password');
  const passwordInput = document.querySelector('#password');
  
  if (togglePassword && passwordInput) {
    togglePassword.addEventListener('click', function(e) {
      e.preventDefault();
      passwordInput.type = passwordInput.type === 'password' ? 'text' : 'password';
      this.textContent = passwordInput.type === 'password' ? 'üëÅ' : 'üëÅ‚Äçüó®';
    });
  }

  // Add focus animations
  const inputs = document.querySelectorAll('.advanced-form-input');
  inputs.forEach(input => {
    input.addEventListener('focus', function() {
      this.parentElement.style.transform = 'scale(1.01)';
    });
    input.addEventListener('blur', function() {
      this.parentElement.style.transform = 'scale(1)';
    });
  });

  // Social button animations
  const socialBtns = document.querySelectorAll('.social-btn');
  socialBtns.forEach(btn => {
    btn.addEventListener('click', function(e) {
      e.preventDefault();
      this.style.transform = 'scale(0.95)';
      setTimeout(() => {
        this.style.transform = '';
      }, 200);
    });
  });
});
</script>
{% endblock %}
