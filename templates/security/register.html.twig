  color: #c0392b;
  font-size: 14px;
}

.error-message {
  color: #e74c3c;
  font-size: 13px;
  line-height: 1.4;
}

.error-suggestion {
  font-size: 12px;
  color: #666;
  margin-top: 4px;
}

.error-link {
  color: #667eea;
  text-decoration: none;
  font-weight: 600;
  transition: all 0.3s ease;
}

.error-link:hover {
  color: #764ba2;
  text-decoration: underline;
