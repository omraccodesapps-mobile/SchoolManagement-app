{% extends 'base.html.twig' %}

{% block title %}Register - Join Us{% endblock %}

{% block body %}
<div class="advanced-register-container">
  <div class="advanced-register-wrapper" data-controller="advanced-form">
    <!-- Left Decorative Section -->
    <div class="advanced-register-decoration">
      <div class="decoration-blur-1"></div>
      <div class="decoration-blur-2"></div>
      <div class="decoration-content">
        <h2>Welcome to Our Platform</h2>
        <p>Join thousands of students and teachers transforming education</p>
        <div class="feature-list">
          <div class="feature-item">
            <span class="feature-icon">‚úì</span>
            <span>Interactive Learning</span>
          </div>
          <div class="feature-item">
            <span class="feature-icon">‚úì</span>
            <span>Real-time Collaboration</span>
          </div>
          <div class="feature-item">
            <span class="feature-icon">‚úì</span>
            <span>Advanced Analytics</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Form Section -->
    <div class="advanced-register-form-section">
      <div class="form-header">
        <h1 class="form-title">Create Account</h1>
        <p class="form-subtitle">Start your journey today</p>
      </div>

      {{ form_start(registrationForm, {'attr': {'class': 'advanced-register-form', 'data-advanced-form-target': 'form', 'novalidate': false}}) }}
        
        <!-- Email Field -->
        <div class="advanced-form-group" data-advanced-form-target="field">
          <label for="{{ registrationForm.email.vars.id }}" class="advanced-form-label">Email Address</label>
          <div class="advanced-input-wrapper{% if registrationForm.email.vars.errors %} has-error{% endif %}">
            {{ form_widget(registrationForm.email, {'attr': {'class': 'advanced-form-input', 'placeholder': 'you@example.com'}}) }}
            <span class="input-icon">‚úâ</span>
            <div class="input-indicator"></div>
          </div>
          {% if registrationForm.email.vars.errors %}
            <div class="advanced-error-box">
              <span class="error-icon">‚ö†Ô∏è</span>
              <div class="error-content">
                <div class="error-title">Email Already Exists</div>
                {% for error in registrationForm.email.vars.errors %}
                  <div class="error-message">{{ error.message }}</div>
                {% endfor %}
                <div class="error-suggestion">üí° <a href="{{ path('app_login') }}" class="error-link">Login to your existing account</a></div>
              </div>
            </div>
          {% endif %}
        </div>

        <!-- Name Field -->
        <div class="advanced-form-group" data-advanced-form-target="field">
          <label for="{{ registrationForm.name.vars.id }}" class="advanced-form-label">Full Name</label>
          <div class="advanced-input-wrapper">
            {{ form_widget(registrationForm.name, {'attr': {'class': 'advanced-form-input', 'placeholder': 'Your full name'}}) }}
            <span class="input-icon">üë§</span>
            <div class="input-indicator"></div>
          </div>
          {% if registrationForm.name.vars.errors %}
            {% for error in registrationForm.name.vars.errors %}
              <span class="advanced-form-error">{{ error.message }}</span>
            {% endfor %}
          {% endif %}
        </div>

        <!-- Password Field -->
        <div class="advanced-form-group" data-advanced-form-target="field">
          <label for="{{ registrationForm.plainPassword.vars.id }}" class="advanced-form-label">Password</label>
          <div class="advanced-input-wrapper">
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'advanced-form-input', 'placeholder': 'Minimum 8 characters'}}) }}
            <span class="input-icon toggle-password">üëÅ</span>
            <div class="input-indicator"></div>
          </div>
          <div class="password-strength">
            <div class="strength-bar"><div class="strength-fill"></div></div>
            <span class="strength-text">Password strength: <span class="strength-level">None</span></span>
          </div>
          {% if registrationForm.plainPassword.vars.errors %}
            {% for error in registrationForm.plainPassword.vars.errors %}
              <span class="advanced-form-error">{{ error.message }}</span>
            {% endfor %}
          {% endif %}
        </div>

        <!-- Role Selection -->
        <div class="advanced-form-group" data-advanced-form-target="field">
          <label class="advanced-form-label">Select Your Role</label>
          <div class="role-selector">
            {% for child in registrationForm.roles %}
              <label class="role-option">
                {{ form_widget(child, {'attr': {'class': 'role-radio'}}) }}
                <span class="role-badge">
                  <span class="role-icon">{{ child.vars.value == 'ROLE_STUDENT' ? 'üìö' : 'üë®‚Äçüè´' }}</span>
                  <span class="role-name">{{ child.vars.label }}</span>
                </span>
              </label>
            {% endfor %}
          </div>
          {% if registrationForm.roles.vars.errors %}
            {% for error in registrationForm.roles.vars.errors %}
              <span class="advanced-form-error">{{ error.message }}</span>
            {% endfor %}
          {% endif %}
        </div>

        <!-- Submit Button -->
        <button type="submit" class="advanced-register-btn" data-advanced-form-target="submitBtn">
          <span class="btn-text">Create Account</span>
          <span class="btn-icon">‚Üí</span>
        </button>

        <!-- Login Link -->
        <div class="form-footer">
          <p>Already have an account? <a href="{{ path('app_login') }}" class="login-link">Login here</a></p>
        </div>

      {{ form_rest(registrationForm) }}
    </div>
  </div>
</div>

<style>
.advanced-register-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20px;
  position: relative;
  overflow: hidden;
}

.advanced-register-wrapper {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40px;
  max-width: 1100px;
  width: 100%;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10px);
  animation: slideInUp 0.6s ease-out;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.advanced-register-decoration {
  position: relative;
  padding: 60px 40px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}

.decoration-blur-1, .decoration-blur-2 {
  position: absolute;
  border-radius: 50%;
  opacity: 0.1;
  animation: float 6s ease-in-out infinite;
}

.decoration-blur-1 {
  width: 300px;
  height: 300px;
  background: white;
  top: -100px;
  right: -100px;
}

.decoration-blur-2 {
  width: 200px;
  height: 200px;
  background: white;
  bottom: -50px;
  left: -50px;
  animation-delay: 2s;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(20px); }
}

.decoration-content {
  position: relative;
  z-index: 1;
}

.decoration-content h2 {
  font-size: 32px;
  font-weight: 700;
  margin-bottom: 15px;
  animation: slideInDown 0.8s ease-out;
}

.decoration-content p {
  font-size: 16px;
  opacity: 0.9;
  margin-bottom: 40px;
  animation: slideInDown 0.8s ease-out 0.1s both;
}

@keyframes slideInDown {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 12px;
  font-size: 15px;
  animation: slideInLeft 0.8s ease-out both;
}

.feature-item:nth-child(2) { animation-delay: 0.2s; }
.feature-item:nth-child(3) { animation-delay: 0.4s; }

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.feature-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30px;
  height: 30px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  font-weight: bold;
}

.advanced-register-form-section {
  padding: 60px 40px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  animation: slideInRight 0.8s ease-out;
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.form-header {
  text-align: center;
  margin-bottom: 40px;
}

.form-title {
  font-size: 28px;
  font-weight: 700;
  color: #333;
  margin-bottom: 8px;
}

.form-subtitle {
  color: #999;
  font-size: 14px;
}

.advanced-register-form {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.advanced-form-group {
  animation: fadeInUp 0.6s ease-out both;
}

.advanced-form-group:nth-child(1) { animation-delay: 0.1s; }
.advanced-form-group:nth-child(2) { animation-delay: 0.2s; }
.advanced-form-group:nth-child(3) { animation-delay: 0.3s; }
.advanced-form-group:nth-child(4) { animation-delay: 0.4s; }

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(15px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.advanced-form-label {
  display: block;
  font-size: 13px;
  font-weight: 600;
  color: #333;
  margin-bottom: 8px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.advanced-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.advanced-input-wrapper.has-error .advanced-form-input {
  border-color: #e74c3c;
  background: #fff5f5;
}

.advanced-form-input {
  width: 100%;
  padding: 12px 40px 12px 16px;
  border: 2px solid #e0e0e0;
  border-radius: 10px;
  font-size: 14px;
  transition: all 0.3s ease;
  background: #fafafa;
}

.advanced-form-input:focus {
  outline: none;
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
  transform: translateY(-2px);
}

.advanced-form-input:focus.has-error {
  border-color: #e74c3c;
  box-shadow: 0 0 0 4px rgba(231, 76, 60, 0.1);
}

.advanced-form-input::placeholder {
  color: #ccc;
}

.input-icon {
  position: absolute;
  right: 12px;
  color: #999;
  font-size: 18px;
  cursor: pointer;
  transition: all 0.3s ease;
}

.input-icon.toggle-password:hover {
  color: #667eea;
}

.input-indicator {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 2px;
  background: linear-gradient(90deg, #667eea, #764ba2);
  width: 0;
  transition: width 0.3s ease;
