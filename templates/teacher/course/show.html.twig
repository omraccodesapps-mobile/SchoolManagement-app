{% extends 'base.html.twig' %}

{% block title %}{{ course.title }}{% endblock %}

{% block body %}
<div class="mb-4">
  <h1>{{ course.title }}</h1>
  <p class="text-muted">Taught by {{ course.teacher.name }}</p>
</div>

<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title">Description</h5>
    <p>{{ course.description }}</p>
  </div>
</div>

<!-- Course Videos Section -->
{% if course.videos|length > 0 %}
<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title mb-3">
      <i class="bi bi-film"></i> Course Videos ({{ course.videos|length }})
    </h5>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Duration</th>
            <th>Uploaded</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for video in course.videos %}
          <tr>
            <td>
              <strong>{{ video.title }}</strong>
              {% if video.description %}
                <br><small class="text-muted">{{ video.description|truncate(50) }}</small>
              {% endif %}
            </td>
            <td>
              <span class="badge bg-{% if video.status == 'PROCESSING' %}warning{% elseif video.status == 'READY' %}success{% elseif video.status == 'ERROR' %}danger{% else %}secondary{% endif %}">
                {{ video.status }}
              </span>
            </td>
            <td>
              {% if video.duration %}
                {{ (video.duration / 60)|number_format(0) }}m
              {% else %}
                <span class="text-muted">-</span>
              {% endif %}
            </td>
            <td>
              <small>{{ video.createdAt|date('M d, Y') }}</small>
            </td>
            <td>
              {% if video.status == 'READY' %}
                <a href="{{ path('app_video_detail', {id: video.id}) }}" class="btn btn-sm btn-primary" title="Watch">
                  <i class="bi bi-play-circle"></i> Watch
                </a>
              {% elseif video.status == 'PROCESSING' %}
                <span class="badge bg-warning">Processing...</span>
              {% elseif video.status == 'ERROR' %}
                <span class="badge bg-danger">Failed</span>
              {% endif %}
              <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteVideo({{ video.id }})">
                <i class="bi bi-trash"></i>
              </button>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% else %}
<div class="card mb-3">
  <div class="card-body">
    <p class="text-muted mb-3">
      <i class="bi bi-info-circle"></i> No videos uploaded yet.
    </p>
    <a href="{{ path('api_videos_upload') }}" class="btn btn-sm btn-primary">
      <i class="bi bi-plus-circle"></i> Upload Video
    </a>
  </div>
</div>
{% endif %}

<!-- PDF Actions -->
<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title mb-3">PDF Reports</h5>
    <div class="btn-group" role="group">
      <a href="{{ path('pdf_course_report', {courseId: course.id}) }}" class="btn btn-primary pdf-download" data-course="{{ course.title }}" title="Download Course Report PDF">
        <i class="bi bi-download"></i> Download Report
      </a>
      <a href="{{ path('pdf_course_report_view', {courseId: course.id}) }}" class="btn btn-outline-primary pdf-view" data-course="{{ course.title }}" title="View Report in Browser" target="_blank">
        <i class="bi bi-eye"></i> View Report
      </a>
    </div>
    <div id="pdfMessage" class="mt-3"></div>
  </div>
</div>

<div class="mt-3">
  <a href="{{ path('app_course_edit', {id: course.id}) }}" class="btn btn-secondary">Edit</a>
  <form method="POST" action="{{ path('app_course_delete', {id: course.id}) }}" style="display:inline;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ course.id) }}">
    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
  </form>
  <a href="{{ path('app_course_index') }}" class="btn btn-outline-secondary">Back</a>
</div>

<style>
    .pdf-download, .pdf-view {
        transition: all 0.3s ease;
    }
    
    .pdf-download:hover, .pdf-view:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .pdf-download:disabled, .pdf-view:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const pdfButtons = document.querySelectorAll('.pdf-download, .pdf-view');
        
        pdfButtons.forEach(button => {
            button.addEventListener('click', function(e) {
                const courseName = this.getAttribute('data-course');
                const isView = this.classList.contains('pdf-view');
                
                // Show loading state
                const originalHtml = this.innerHTML;
                this.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Loading...';
                this.disabled = true;
                
                // Set timeout to restore button (simulates loading)
                setTimeout(() => {
                    this.innerHTML = originalHtml;
                    this.disabled = false;
                    
                    // Show success message
                    const messageDiv = document.getElementById('pdfMessage');
                    const alertDiv = document.createElement('div');
                    alertDiv.className = 'alert alert-success alert-dismissible fade show';
                    alertDiv.role = 'alert';
                    alertDiv.innerHTML = `
                        <i class="bi bi-check-circle"></i>
                        <strong>${isView ? 'Opening' : 'Downloading'} PDF</strong> for "${courseName}"
                        ${isView ? ' - Your PDF will open in a new tab.' : ' - Check your downloads folder.'}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    `;
                    
                    messageDiv.innerHTML = '';
                    messageDiv.appendChild(alertDiv);
                    
                    // Auto-dismiss after 5 seconds
                    setTimeout(() => {
                        if (alertDiv.parentNode) {
                            alertDiv.remove();
                        }
                    }, 5000);
                }, 1500);
            });
        });
    });
</script>
{% endblock %}
