{% extends 'base.html.twig' %}

{% block title %}Teacher Dashboard{% endblock %}

{% block body %}
<div class="advanced-teacher-dashboard">
  <!-- Header Section -->
  <div class="dashboard-header">
    <div class="header-content">
      <div>
        <h1 class="dashboard-title">My Teaching Dashboard</h1>
        <p class="dashboard-subtitle">Manage your courses and track student progress</p>
      </div>
      <a href="{{ path('app_course_new') }}" class="advanced-primary-btn">
        <span class="btn-icon">+</span>
        <span class="btn-text">Create Course</span>
      </a>
    </div>
  </div>

  <!-- Stats Section -->
  <div class="stats-grid">
    <div class="stat-card" data-controller="advanced-card">
      <div class="stat-value">{{ courses|length }}</div>
      <div class="stat-label">Active Courses</div>
      <div class="stat-icon">üìñ</div>
    </div>
    <div class="stat-card" data-controller="advanced-card">
      <div class="stat-value">{% set totalStudents = 0 %}{% for course in courses %}{% set totalStudents = totalStudents + course.enrollments|length %}{% endfor %}{{ totalStudents }}</div>
      <div class="stat-label">Total Students</div>
      <div class="stat-icon">üë•</div>
    </div>
    <div class="stat-card" data-controller="advanced-card">
      <div class="stat-value">{{ (courses|length > 0 ? 100 : 0)|round }}%</div>
      <div class="stat-label">Completion Rate</div>
      <div class="stat-icon">‚úÖ</div>
    </div>
  </div>

  <!-- Courses Section -->
  <div class="courses-section">
    <div class="section-header">
      <h2 class="section-title">My Courses</h2>
      <p class="section-subtitle">{{ courses|length }} course{{ courses|length != 1 ? 's' : '' }} published</p>
    </div>

    {% if courses %}
      <div class="courses-grid">
        {% for course in courses %}
          <div class="course-card" data-controller="advanced-card" data-advanced-card-id="{{ course.id }}">
            <div class="course-card-header">
              <div class="course-stats">
                <span class="stat-badge students-badge">
                  <span class="badge-icon">üë•</span>
                  <span class="badge-text">{{ course.enrollments|length }} Students</span>
                </span>
              </div>
              <div class="course-actions">
                <button class="action-icon" title="More options">‚ãÆ</button>
              </div>
            </div>

            <div class="course-card-content">
              <h3 class="course-title">{{ course.title }}</h3>
              
              <!-- Student Progress -->
              <div class="student-progress">
                <div class="progress-label">Student Engagement</div>
                <div class="progress-bar">
                  <div class="progress-fill" style="width: {{ course.enrollments|length > 0 ? '85' : '0' }}%"></div>
                </div>
                <div class="progress-text">{{ course.enrollments|length > 0 ? '85' : '0' }}% active</div>
              </div>

              <!-- Quick Stats -->
              <div class="quick-stats">
                <div class="quick-stat">
                  <span class="stat-number">{{ course.enrollments|length }}</span>
                  <span class="stat-name">Enrollments</span>
                </div>
                <div class="quick-stat">
                  <span class="stat-number">{{ (course.grades is defined) ? course.grades|length : '0' }}</span>
                  <span class="stat-name">Grades</span>
                </div>
              </div>
            </div>

            <div class="course-card-footer">
              <div class="course-actions-group">
                <a href="{{ path('app_course_show', {id: course.id}) }}" 
                   class="action-btn view-btn" 
                   title="View course details">
                  <span class="action-icon">üëÅÔ∏è</span>
                  <span class="action-text">View</span>
                </a>
                
                <a href="{{ path('app_course_edit', {id: course.id}) }}" 
                   class="action-btn edit-btn" 
                   title="Edit course">
                  <span class="action-icon">‚úèÔ∏è</span>
                  <span class="action-text">Edit</span>
                </a>

                <a href="{{ path('pdf_course_report', {courseId: course.id}) }}" 
                   class="action-btn pdf-btn pdf-download-dash" 
                   data-course="{{ course.title }}"
                   title="Download report">
                  <span class="action-icon">üì•</span>
                  <span class="action-text">Report</span>
                </a>
              </div>
            </div>

            <!-- Card Overlay Animation -->
            <div class="card-overlay"></div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="empty-state">
        <div class="empty-icon">üìñ</div>
        <h3>No Courses Yet</h3>
        <p>Get started by creating your first course and start teaching!</p>
        <a href="{{ path('app_course_new') }}" class="advanced-primary-btn">
          <span class="btn-icon">+</span>
          <span class="btn-text">Create First Course</span>
        </a>
      </div>
    {% endif %}
  </div>
</div>

<style>
.advanced-teacher-dashboard {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
  padding: 40px 20px;
}

.dashboard-header {
  max-width: 1200px;
  margin: 0 auto 40px;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20px;
}

.dashboard-title {
  font-size: 36px;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 8px;
  animation: slideInDown 0.6s ease-out;
}

.dashboard-subtitle {
  font-size: 15px;
  color: #7f8c8d;
  animation: slideInDown 0.6s ease-out 0.1s both;
}

@keyframes slideInDown {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.advanced-primary-btn {
  padding: 12px 24px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  text-decoration: none;
  border-radius: 10px;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 8px;
  transition: all 0.3s ease;
  cursor: pointer;
  border: none;
  font-size: 15px;
  animation: slideInDown 0.6s ease-out 0.2s both;
}

.advanced-primary-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
}

.advanced-primary-btn:active {
  transform: translateY(0);
}

.btn-icon {
  font-size: 20px;
}

.btn-text {
  position: relative;
}

/* Stats Grid */
.stats-grid {
  max-width: 1200px;
  margin: 0 auto 40px;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 20px;
}

.stat-card {
  background: white;
  padding: 24px;
  border-radius: 15px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
  animation: bounceIn 0.6s ease-out both;
  cursor: pointer;
  transition: all 0.3s ease;
}

.stat-card:nth-child(1) { animation-delay: 0.1s; }
.stat-card:nth-child(2) { animation-delay: 0.2s; }
.stat-card:nth-child(3) { animation-delay: 0.3s; }

@keyframes bounceIn {
  0% {
    opacity: 0;
    transform: scale(0.9);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

.stat-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.stat-card:hover::before {
  left: 100%;
}

.stat-value {
  font-size: 32px;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 8px;
}

.stat-label {
  font-size: 13px;
  color: #7f8c8d;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.stat-icon {
  position: absolute;
  top: -10px;
  right: -10px;
  font-size: 60px;
  opacity: 0.1;
}

/* Courses Section */
.courses-section {
  max-width: 1200px;
  margin: 0 auto;
}

.section-header {
  margin-bottom: 30px;
  animation: fadeInUp 0.6s ease-out;
}

.section-title {
  font-size: 24px;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 4px;
}

.section-subtitle {
  font-size: 14px;
  color: #7f8c8d;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.courses-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 24px;
}

.course-card {
  background: white;
  border-radius: 15px;
  overflow: hidden;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  animation: slideInUp 0.6s ease-out both;
  position: relative;
  display: flex;
  flex-direction: column;
}

.course-card:nth-child(1) { animation-delay: 0.1s; }
.course-card:nth-child(2) { animation-delay: 0.2s; }
.course-card:nth-child(3) { animation-delay: 0.3s; }
.course-card:nth-child(n+4) { animation-delay: 0.4s; }

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.course-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 16px 40px rgba(0, 0, 0, 0.15);
}

.card-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.05) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.course-card:hover .card-overlay {
  opacity: 1;
}

.course-card-header {
  padding: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
}

.course-stats {
  display: flex;
  gap: 8px;
}

.stat-badge {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 11px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  animation: popIn 0.5s ease-out;
}

@keyframes popIn {
  0% {
    opacity: 0;
    transform: scale(0.8);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

.students-badge {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.badge-icon {
  font-size: 12px;
}

.badge-text {
  font-weight: 600;
}

.course-actions {
  display: flex;
  gap: 8px;
}

.action-icon {
  background: none;
  border: none;
  color: #7f8c8d;
  font-size: 20px;
  cursor: pointer;
  transition: all 0.3s ease;
  padding: 4px;
}

.action-icon:hover {
  color: #667eea;
  transform: scale(1.1);
}

.course-card-content {
  padding: 20px;
  flex: 1;
}

.course-title {
  font-size: 18px;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 12px;
  line-height: 1.3;
}

.course-meta {
  display: flex;
  gap: 15px;
  margin-bottom: 16px;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 12px;
  color: #7f8c8d;
}

.meta-icon {
  font-size: 16px;
}

.student-progress {
  margin-bottom: 16px;
}

.progress-label {
  font-size: 12px;
  font-weight: 600;
  color: #7f8c8d;
  margin-bottom: 8px;
}

.progress-bar {
  height: 6px;
  background: #e0e0e0;
  border-radius: 3px;
  overflow: hidden;
  margin-bottom: 6px;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 3px;
  animation: slideInWidth 1.2s ease-out;
}

@keyframes slideInWidth {
  from {
    width: 0 !important;
  }
}

.progress-text {
  font-size: 11px;
  color: #667eea;
  font-weight: 600;
}

.quick-stats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12px;
  padding-top: 12px;
  border-top: 1px solid #f0f0f0;
}

.quick-stat {
  text-align: center;
  padding: 12px 0;
}

.stat-number {
  display: block;
  font-size: 20px;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 4px;
}

.stat-name {
  display: block;
  font-size: 11px;
  color: #7f8c8d;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.3px;
}

.course-card-footer {
  padding: 16px 20px;
  border-top: 1px solid #f0f0f0;
}

.course-actions-group {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8px;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
  padding: 10px;
  border: 2px solid #e0e0e0;
  background: white;
  border-radius: 8px;
  cursor: pointer;
  text-decoration: none;
  color: #2c3e50;
  font-size: 11px;
  font-weight: 600;
  transition: all 0.3s ease;
  text-align: center;
}

.action-btn:hover {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.05);
  color: #667eea;
  transform: translateY(-2px);
}

.view-btn:hover { border-color: #667eea; color: #667eea; }
.edit-btn:hover { border-color: #f39c12; color: #f39c12; background: rgba(243, 156, 18, 0.05); }
.pdf-btn:hover { border-color: #27ae60; color: #27ae60; background: rgba(39, 174, 96, 0.05); }

.action-icon {
  font-size: 18px;
}

.action-text {
  font-size: 10px;
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 60px 20px;
  background: white;
  border-radius: 15px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  animation: fadeInUp 0.6s ease-out;
}

.empty-icon {
  font-size: 64px;
  margin-bottom: 20px;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}

.empty-state h3 {
  font-size: 22px;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 12px;
}

.empty-state p {
  font-size: 14px;
  color: #7f8c8d;
  margin-bottom: 24px;
}

/* Responsive */
@media (max-width: 768px) {
  .header-content {
    flex-direction: column;
    align-items: stretch;
  }

  .dashboard-title {
    font-size: 28px;
  }

  .stats-grid {
    grid-template-columns: 1fr;
  }

  .courses-grid {
    grid-template-columns: 1fr;
  }

  .course-actions-group {
    grid-template-columns: 1fr;
  }

  .quick-stats {
    grid-template-columns: 1fr 1fr;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // PDF Download Animation
  const pdfButtons = document.querySelectorAll('.pdf-download-dash');
  
  pdfButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      const courseName = this.getAttribute('data-course');
      const originalHtml = this.innerHTML;
      
      // Add loading state
      this.innerHTML = '<span class="action-icon">‚è≥</span><span class="action-text">Loading...</span>';
      this.style.pointerEvents = 'none';
      this.style.opacity = '0.6';
      
      // Simulate download delay
      setTimeout(() => {
        this.innerHTML = originalHtml;
        this.style.pointerEvents = 'auto';
        this.style.opacity = '1';
        
        // Show success message
        showReportNotification(courseName);
      }, 1500);
    });
  });

  // Card hover effects
  const courseCards = document.querySelectorAll('.course-card');
  courseCards.forEach(card => {
    card.addEventListener('mouseenter', function() {
      this.style.zIndex = '10';
    });
    card.addEventListener('mouseleave', function() {
      this.style.zIndex = 'auto';
    });
  });
});

function showReportNotification(courseName) {
  const notification = document.createElement('div');
  notification.style.cssText = `
    position: fixed;
    bottom: 20px;
    right: 20px;
    background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
    color: white;
    padding: 16px 24px;
    border-radius: 10px;
    box-shadow: 0 8px 25px rgba(243, 156, 18, 0.3);
    display: flex;
    align-items: center;
    gap: 12px;
    z-index: 10000;
    animation: slideInRight 0.4s ease-out;
    font-size: 14px;
    font-weight: 600;
  `;
  notification.innerHTML = `
    <span>‚úì</span>
    <span>Downloading report for "<strong>${courseName}</strong>"</span>
  `;
  
  document.body.appendChild(notification);
  
  setTimeout(() => {
    notification.style.animation = 'slideOutRight 0.4s ease-out';
    setTimeout(() => notification.remove(), 400);
  }, 3000);
}

// Define slideOut animations
const style = document.createElement('style');
style.textContent = `
  @keyframes slideOutRight {
    to {
      opacity: 0;
      transform: translateX(100px);
    }
  }
`;
document.head.appendChild(style);
</script>
{% endblock %}
